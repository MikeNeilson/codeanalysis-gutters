{
  "name": "codeanalysis-gutters",
  "displayName": "codeanalysis-gutters",
  "description": "Render information from various code analysis tools. Starting with PMD-CPD and Spotbugs.",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "git@github.com:MikeNeilson/codeanalysis-gutters.git"
  },
  "license": "CC0 1.0 Universal",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other","Linters","Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeanalysis-gutters.pmd.showDuplicates",
        "title": "Show Duplicate Code",
        "category": "Code Analysis-PMD"
      },
      {
        "command": "codeanalysis-gutters.pmd.hideDuplicates",
        "title": "Hide Duplicate Code Indicators",
        "category": "Code Analysis-PMD"
      },
      {
        "command": "codeanalysis-gutters.pmd.refreshDuplicates",
        "title": "Code Analysis-PMD: Refresh Duplicate Tree",
        "category": "Code Analysis-PMD"
      },
      {
        "command": "codeanalysis-gutters.pmd.editFromTree",
        "title": "Edit"        
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "cpd.DuplicateCode",
          "name": "Duplicate Code"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command":"codeanalysis-gutters.pmd.editFromTree",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "codeanalysis-gutters.pmd.editFromTree",
          "title": "edit",
          "when": "view == cpd.DuplicateCode && viewItem == DuplicationItem",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "8.1.0",
    "@types/mocha": "10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "1.75.0",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "@vscode/test-electron": "2.2.3",
    "eslint": "8.34.0",
    "glob": "8.1.0",
    "mocha": "10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@types/xml2js": "0.4.11",
    "xml2js": "0.4.23"
  },
  "vsce": {
    "dependencies": true,
    "yarn": false
  }
}
